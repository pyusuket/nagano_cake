<div class='container'>
  <div class="row" style="margin: 30px 0px ;">
    <div class="col-md-12">
      <div class="page_title_box">
        <span class="page_title">
          <strong>新規会員登録</strong>
        </span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-md-1">
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <div class="row">
        <div class="col-md-3"> 
          <%= f.label :名前 %>
        </div>
        <div class="col-md-9">
          <div class="form-inline"> 
            (姓)　　<%= f.text_field :last_name, autofocus: true, autocomplete: "given-name" ,placeholder: "令和", class: "form-control mr-5" %>
            (名)　　<%= f.text_field :first_name, autofocus: true, autocomplete: "given-name" ,placeholder: "道子", class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3"> 
          <%= f.label :フリガナ %>
        </div>
        <div class="col-md-9">
          <div class="form-inline">
            (セイ)　<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "given-name" ,placeholder: "レイワ", class: "form-control mr-5" %>
            (メイ)　<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "given-name" ,placeholder: "ミチコ", class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3"> 
          <%= f.label :メールアドレス %>
        </div>
        <div class="col-md-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "sample@example.com", class: "form-control"%>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3"> 
          <%= f.label :郵便番号%>
        </div>
        <div class="col-md-4">
          <%= f.text_field :postal_code, autofocus: true ,placeholder: "00000000", class: "form-control" %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3">
        <%= f.label :住所（ハイフンなし） %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :address, autofocus: true ,placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3">
          <%= f.label :電話番号（ハイフンなし） %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :telephone_number, autofocus: true ,placeholder: "00000000000", class: "form-control" %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3">
          <%= f.label :パスワード（６文字以上）%>
        </div>
        <div class="col-md-4">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-3">
          <%= f.label :パスワード（確認用） %>
        </div>
        <div class="col-md-4">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 offset-md-3 mt-3">
          <%= f.submit "新規登録" ,class:"btn btn-success" ,style:"padding: 3px 55px;"%>
        </div>
      </div>
    <% end %>
    </div>
  </div>
    <div class="row mt-2">
    <div class="col-md-12">
      <div class="page_title_box">
        <span class="page_title">
          <strong>既に登録済みの方</strong>
        </span>
      </div>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-md-11 offset-md-1">
      <%= link_to customer_session_path, style: "text-decoration: underline;" do %>
        こちら
      <% end %>　からログインしてください。
    </div>
  </div>

