<div class='container'>
  <div class="row" style="margin: 30px 0px ; ">
    <div class="col-md-12">
      <div class="page_title_box d-flex align-items-center">
        <span class="page_title">
          <strong>注文履歴一覧</strong>
        </span>
      </div>
    </div>
  </div>
  
  <div class='col-md-12'>
    <table class='table'>
      <thead>
        <tr>
          <th bgcolor="#EEEEEE" style="border: 1px solid black;">注文日</th>
          <th bgcolor="#EEEEEE" style="border: 1px solid black;">配送先</th>
          <th bgcolor="#EEEEEE" style="border: 1px solid black;">注文商品</th>
          <th bgcolor="#EEEEEE" style="border: 1px solid black;">支払い金額</th>
          <th bgcolor="#EEEEEE" style="border: 1px solid black;">ステータス</th>
          <th bgcolor="#EEEEEE" style="border: 1px solid black;">注文詳細</th>
        </tr>
      </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td style="border: 1px solid black; vertical-align: middle;"><%= order.created_at.strftime("%Y/%-m/%-d") %></td>
              <td style="border: 1px solid black; vertical-align: middle;">〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
              <td style="border: 1px solid black; vertical-align: middle;">
                <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %><br>
                <% end %>
              </td>
              <td style="border: 1px solid black; vertical-align: middle;"><%= number_with_delimiter(order.total_payment) %>円</td>
              <td style="border: 1px solid black; vertical-align: middle;">-</td>
              <td style="border: 1px solid black; vertical-align: middle; text-align: center;"><%= link_to "表示する", order_path(order), class: "btn btn-sm btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3 text-center ml-auto mr-auto">
      <%= paginate @orders %>
    </div>
 