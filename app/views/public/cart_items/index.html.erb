<div class='container'>
  <div class="row" style="margin: 30px 0px ; ">
    <div class="col-md-8">
      <div class="page_title_box">
        <span class="page_title">
          <strong>ショッピングカート</strong>
        </span>
      </div>
      <div>
        <%= link_to 'カートを空にする', @cart_item, method: :delete, data: {confirm: 'カートの中を空にしていいですか？' }, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  </div>
  
  <div class='col-md-10 offset-md-1'>
    <table class='table'>
      <thead>
        <tr>
          <th bgcolor="#EEEEEE" colspan="2">商品名</th>
          <th bgcolor="#EEEEEE">単価</th>
          <th bgcolor="#EEEEEE"colspan="2">数量</th>
          <th bgcolor="#EEEEEE">小計</th>
          <th bgcolor="#EEEEEE"></th>
        </tr>
      </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= image_tag(cart_item.item.get_image(200,60)) %></td>
              <td><strong><%= cart_item.item.name %></strong></td>
              <td><%= number_with_delimiter(cart_item.item.with_tax_price) %></td>
              <td><%= select_tag "cart_items[#{cart_item.id}][amount]", options_for_select((0..10).to_a, cart_item.amount) %></td>
              <td><%= link_to '変更', cart_item_path(cart_item), class: "btn btn-sm btn-success" %></td>
              <td><%= number_with_delimiter(cart_item.subtotal) %></td>
              <% @total_amount += cart_item.subtotal %>
              <td><%= link_to '削除する', @cart_item, method: :delete, data: {confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>