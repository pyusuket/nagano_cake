<div class='container'>
  <div class="row mt-5 offset-md-2">
    <div class="col-md-4">
      <%= image_tag(@item.image, size: '250x200') %>
    </div>
    <div class="col-md-6">
    <%= form_with model: CartItem.new do |f| %>
      <div>
        <h3><strong><%= @item.name %></strong></h3>
        <%= @item.introduction %>
      </div>
      <div class="mt-5">
        <span style="font-weight: bold; font-size: larger;">
        ￥<%= number_with_delimiter((@item.price * 1.10).round) %>
        </span>(税込)
      </div>
      <div class="mt-3 d-flex align-items-center">
        <div class="mr-2">
          <%= f.select :amount, *[1..10], include_blank: "個数選択" ,class: "form-select"  %>
        </div>
        <div>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.submit 'カートに入れる', class: "btn btn-success", style: "padding: 3px 10px;" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>