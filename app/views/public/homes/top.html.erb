<div class='container'>
  <div class="row">
    <div class="col-md-12 mt-5 d-flex align-items-center">
      <h3><strong>商品一覧</strong></h3>
      <div class="ml-2">
        (全<%= @items.count %>件)
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div><%= link_to image_tag(item.image, size: '200x150'), item_path(item) %></div>
        <div class="mt-2" ><strong><%= item.name %></strong></div>
        <div class="mt-2" ><strong>￥<%= number_with_delimiter(item.price) %></strong></div>
      </div>
    <% end %>
  </div>
  <div class="col-md-3 text-center ml-auto mr-auto">
    <%= paginate @items %>
  </div>
</div>