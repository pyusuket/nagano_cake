<div class='container'>
  <div class="row" style="margin: 30px 0px">
    <div class="col-md-10 offset-md-1">
      <div class="page_title_box">
        <span class="page_title">
          <strong><%= @customer.name %></strong>さんの<strong>注文履歴</strong>
        </span>
      </div>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <table class='table', style="width: 70%;">
      <thead>
        <tr>
          <th bgcolor="#EEEEEE">購入日時</th>
          <th bgcolor="#EEEEEE">注文個数</th>
          <th bgcolor="#EEEEEE">注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.group_by(&:order_id).each do |order_detail| %>
          <tr>
            <td><%= link_to order_detail[1][0].created_at.strftime("%Y/%-m/%-d %H:%M:%S"), admin_order_path(order_detail[0]), style: "color: black; text-decoration: underline;" %></td>
            <td><%= order_detail[1].sum(&:amount) %></td>
            <td>-</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
    <div class="col-md-3 text-center ml-auto mr-auto">
      <%= paginate @order_details %>
    </div>
</div>