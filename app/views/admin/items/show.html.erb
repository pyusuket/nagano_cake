<div class='container'>
  <div class="row" style="margin: 30px 0px ; margin-left: -200px;">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 ml-auto mr-auto text-left">
      <div class="page_title_box">
        <span class="page_title">
          <strong>商品詳細</strong>
        </span>
      </div>
    </div>
  </div>
 <div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.image, size: "200x150" %>
    </div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-sm-4">
          <label>商品名</label>
        </div>
        <div class="col-sm-8">
          <%= @item.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <label>商品説明</label>
        </div>
        <div class="col-sm-8">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <label>ジャンル名</label>
        </div>
        <div class="col-sm-8">
          <% if @item.genre_id == 1 %>
            ケーキ
          <% elsif @item.genre_id == 2 %>
            プリン
          <% elsif @item.genre_id == 3 %>
            焼き菓子
          <% elsif @item.genre_id == 4 %>
            キャンディ
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <label>税抜き価格</label>
        </div>
        <div class="col-sm-8">
          <%= @item.price*1.10 %>円 (<%= @item.price %>)
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <label>販売ステータス</label>
        </div>
        <div class="col-sm-8">
          <%= @item.sale_status %>
        </div>
      </div>
    </div>
  </div>
</div>
  <div class="row">
    <div class="col-md-8 ml-auto" style="display: flex; justify-content: space-between;">
          <%= link_to '編集する', edit_admin_item_path(@item) ,class: "btn btn-success", style: "padding: 3px 40px;" %>
    </div>
  </div>