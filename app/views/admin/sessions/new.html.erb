<div class='container'>
  <div class="row" style="margin: 30px 0px;">
    <div class="col-md-12">
      <div class="page_title_box">
        <span class="page_title">
          <strong>管理者</strong>ログイン
        </span>
      </div>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="row">
      <div class="col-md-12 text-center">
        <%= f.label :メールアドレス, class: "d-inline-block w-25" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "d-inline-block w-50 form-control", placeholder: "sample@example.com" %>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-md-12 text-center">
        <%= f.label :パスワード, class: "d-inline-block w-25" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "d-inline-block w-50 form-control" %>
      </div>
    </div>
    <div class="row justify-content-center mt-4">
      <div class="col-md-12 text-center">
        <%= f.submit "ログイン", class:"btn btn-primary", style:"padding: 2px 35px;" %>
      </div>
    </div>
  <% end %>
</div>
<%= render "admin/shared/links" %>