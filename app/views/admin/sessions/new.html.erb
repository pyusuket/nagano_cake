<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="bg-light">
        <strong>管理者</strong>ログイン
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col">
              <%= f.label :メールアドレス %>
            </div>
            <div class="col">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control" ,placeholder:"sample@example.com"%>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.label :パスワード %>
            </div>
            <div class="col">
              <%= f.password_field :password, autocomplete: "current-password" , class:"form-control"%>
            </div>
          </div>
        </div>
        
        <div class="actions" >
          <%= f.submit "ログイン" ,class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "admin/shared/links" %>
